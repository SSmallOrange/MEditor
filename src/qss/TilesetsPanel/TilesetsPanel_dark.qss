/* TilesetsPanel_dark.qss */
/* ==============================
   Global Base
   ============================== */

/* ͬʱƥ TilesetsPanel๹ objectName TilesetsPanelWidgetMainWindow.ui еʵ */
#TilesetsPanel, #TilesetsPanelWidget {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(0,0,0,0.96),
        stop:1 rgba(106,137,199,0.94));
    border: 1px solid #181F27;
    border-radius: 10px;
    padding: 6px 6px 4px 6px;
    font-family: "Segoe UI","Microsoft YaHei";
    font-size: 12px;
    color: #C6CCD1;
}

/* ȥ ScrollArea ߿ */
QScrollArea#scrollArea,
QScrollArea#scrollArea QWidget#scrollAreaWidgetContents {
    background: transparent;
    border: none;
}

/* ==============================
   Header (Title Row)
   ============================== */

#labelIcon {
    padding: 2px 4px 0 4px;
    font-size: 14px;
}

#labelTitle {
    color: #CCD1D5;
    font-weight: bold;
    padding-left: 2px;
}

QToolButton#buttonCollapseAll {
    width: 24px;
    height: 24px;
    border-radius: 6px;
    background: rgba(0,0,0,0.65);
    border: 1px solid #20272F;
    padding: 0;
}
QToolButton#buttonCollapseAll:hover { background: #7997B5; }
QToolButton#buttonCollapseAll:checked { background: #161C22; }

/* ==============================
   Search Row
   ============================== */

QLineEdit#editSearch {
    background: #13171C;
    border: 1px solid #23292F;
    border-radius: 6px;
    padding: 4px 10px 4px 30px; /* Ԥͼλ */
    selection-background-color: #2C88FF;
    color: #C9CDD1;
}
QLineEdit#editSearch:hover { background: #0F1217; }
QLineEdit#editSearch:focus {
    background: #14161C;
    border: 1px solid #4287E0;
}
QLineEdit#editSearch::placeholder { color: #717C85; }

